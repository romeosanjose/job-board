{
  "name": "romeosanjose/job-board",
  "description": "A simple PHP REST API project following the repository pattern and SOLID principles.",
  "type": "project",
  "require": {
    "php": "^7.4 || ^8.2",
    "illuminate/database": "^8.0",
    "slim/slim": "^4.0",
    "slim/psr7": "^1.0",
    "guzzlehttp/guzzle": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Core\\": "core/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "scripts": {
    "test": "phpunit"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
